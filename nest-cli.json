{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "apps/payments/src",
  "compilerOptions": {
    "deleteOutDir": true,
    "tsConfigPath": "apps/payments/tsconfig.app.json"
  },
  "defaultProject": "payments",
  "monorepo": true,
  "root": "apps/payments",
  "projects": {
    "payments": {
      "type": "application",
      "root": "apps/payments",
      "entryFile": "apps/payments/src/main",
      "sourceRoot": "./",
      "compilerOptions": {
        "tsConfigPath": "apps/payments/tsconfig.app.json",
        "watchAssets": true,
        "assets": [
          {
            "include": "/libs/common/src/proto/*.proto"
          }
        ]
      }
    },
    "common": {
      "type": "library",
      "root": "libs/common",
      "entryFile": "index",
      "sourceRoot": "libs/common/src",
      "compilerOptions": {
        "tsConfigPath": "libs/common/tsconfig.lib.json"
      }
    },
    "orders": {
      "type": "application",
      "root": "apps/orders",
      "entryFile": "main",
      "sourceRoot": "apps/orders/src",
      "compilerOptions": {
        "tsConfigPath": "apps/orders/tsconfig.app.json"
      }
    },
    "api-gateway": {
      "type": "application",
      "root": "apps/api-gateway",
      "entryFile": "main",
      "sourceRoot": "apps/api-gateway/src",
      "compilerOptions": {
        "tsConfigPath": "apps/api-gateway/tsconfig.app.json"
      }
    }
  }
}